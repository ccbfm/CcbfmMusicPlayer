<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/music_control_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:text="xx" />

        <TextView
            android:id="@+id/music_control_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="132dp"
            android:text="xx" />

        <Button
            android:id="@+id/music_control_play"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/button_scanning_bg"
            android:text="@string/music_control_play" />

        <com.ccbfm.music.player.ui.widget.SlidingMenuView
            android:layout_width="match_parent"
            app:sliding_view_id="@id/xxxxxxxxxxxxx"
            app:sliding_max_distance="50dip"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="撒阿发"/>

            <TextView
                android:id="@+id/xxxxxxxxxxxxx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="XXXXXXXXXXXXX"/>
        </com.ccbfm.music.player.ui.widget.SlidingMenuView>
    </FrameLayout>
</layout>